@model InvoiceProductAddRequest
<!-- Modal -->
<div class="modal fade" id="modalAddProduct" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Product Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Invoices" asp-action="AddInvoiceProduct" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col mb-3">
                            <label for="nameWithTitle" class="form-label">Product Name</label>
                            <input asp-for="ProductName" type="text" id="ProductName" class="form-control">
                            <span asp-validation-for="ProductName" class="form-text text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-2 mb-3">
                        <div class="col mb-0">
                            <label for="emailWithTitle" class="form-label">Price</label>
                            <input asp-for="ProductPrice" type="number" id="ProductPrice" class="form-control">
                            <span asp-validation-for="ProductPrice" class="form-text text-danger"></span>
                        </div>
                        <div class="col mb-0">
                            <label for="dobWithTitle" class="form-label">Quantity</label>
                            <input asp-for="Quantity" type="number" id="ProductQuantity" class="form-control">
                            <span asp-validation-for="Quantity" class="form-text text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
                <input type="hidden" asp-for="InvoiceId" />
            </form>
        </div>
    </div>
</div>
<!-- /Modal -->
